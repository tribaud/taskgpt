{
  "name": "taskgpt",
  "version": "1.0.0",
  "description": "Task Manager with AI Integration",
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:tribaud/taskgpt.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "tsc && electron-builder",
    "pack": "tsc && electron-builder --dir",
    "dev:web": "vite"
  },
  "keywords": [
    "task",
    "manager",
    "ai",
    "electron"
  ],
  "author": "TaskGPT Developer",
  "license": "MIT",
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/electron-store": "^1.3.1",
    "@types/node": "^24.3.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.4"
  },
  "dependencies": {
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "electron-store": "^8.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "build": {
    "appId": "com.taskgpt.app",
    "productName": "TaskGPT",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "index.html",
      "styles.css"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "publish": null
  }
}
