{
  "name": "taskgpt",
  "version": "1.0.0",
  "description": "Task Manager with AI Integration",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "tsc && electron-builder",
    "pack": "tsc && electron-builder --dir"
  },
  "keywords": [
    "task",
    "manager",
    "ai",
    "electron"
  ],
  "author": "TaskGPT Developer",
  "license": "MIT",
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/electron-store": "^1.3.1",
    "@types/node": "^24.3.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "electron-store": "^8.0.0"
  },
  "build": {
    "appId": "com.taskgpt.app",
    "productName": "TaskGPT",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "index.html",
      "styles.css"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  }
}
